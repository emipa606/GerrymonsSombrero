<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="HatMakeableBase" Name="CowboyHat">
    <defName>Apparel_Sombrero</defName>
    <label>sombrero</label>
    <description>Broad-brimmed, high-crowned hat made of felt or straw. Its name derived from the Spanish word sombra, meaning “shade,” first appeared in the 15th century.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparels/Sombrero/Sombrero</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>0.14</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Heat>8</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <SocialImpact>0.15</SocialImpact>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparels/Sombrero/Sombrero</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(0.9,0.54,0.15,1)</only>
        </li>
        <li>
          <weight>15</weight>
          <only>RGBA(0.9,0.6,0.18,1)</only>
        </li>
        <li>
          <weight>20</weight>
          <only>RGBA(0.9,0.42,0.23,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="ApparelMakeableBase">
    <defName>Apparel_Poncho</defName>
    <description>A well-known sleeveless garment with unsewn sides and a space for the head to pass through. Design to keep warmth and protect the body from harsh weather conditions while still having the freedom of movement to continue working comfortably.</description>
    <label>poncho</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparels/Sombrero/Poncho</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>80</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToMake>26000</WorkToMake>
      <Mass>2.2</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.07</ArmorRating_Sharp>
      <ArmorRating_Heat>0.07</ArmorRating_Heat>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparels/Sombrero/Poncho</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Outlander</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
